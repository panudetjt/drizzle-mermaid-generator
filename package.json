{
  "name": "drizzle-mermaid-generator",
  "version": "0.0.1",
  "description": "Convert your Drizzle ORM schema into mermaid markup",
  "keywords": [
    "drizzle-orm",
    "mermaid",
    "typescript"
  ],
  "license": "MIT",
  "author": "Mario564",
  "maintainers": [
    "panudetjt"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panudetjt/drizzle-mermaid-generator.git"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsdown src/index.ts --format cjs,esm --dts",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "test:all": "vitest run --dir src/__tests__",
    "test:pg": "vitest run --dir src/__tests__/pg",
    "test:mysql": "vitest run --dir src/__tests__/mysql",
    "test:sqlite": "vitest run --dir src/__tests__/sqlite"
  },
  "devDependencies": {
    "drizzle-orm": "^0.45.1",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.45.1"
  }
}
