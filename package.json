{
  "name": "drizzle-mermaid-generator",
  "version": "0.0.5",
  "description": "Convert your Drizzle ORM schema into Mermaid ER diagrams",
  "packageManager": "bun@1.3.9",
  "keywords": [
    "drizzle-orm",
    "er-diagram",
    "mermaid",
    "typescript"
  ],
  "license": "MIT",
  "author": "Mario564",
  "maintainers": [
    "panudetjt"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/panudetjt/drizzle-mermaid-generator.git"
  },
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.mts",
  "bin": {
    "drizzle-mermaid-generator": "dist/cli.cjs"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./cli": "./dist/cli.cjs"
  },
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "tsdown src/index.ts src/cli.ts --format cjs,esm --dts",
    "build:cli": "tsdown src/cli.ts --format cjs --dts false",
    "fmt": "oxfmt",
    "fmt:check": "oxfmt --check",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "test:all": "vitest run --dir src/__tests__",
    "test:pg": "vitest run --dir src/__tests__/pg",
    "test:mysql": "vitest run --dir src/__tests__/mysql",
    "test:sqlite": "vitest run --dir src/__tests__/sqlite",
    "validate:mermaid": "bun run scripts/validate-mermaid.ts",
    "validate:mermaid:shell": "for f in src/__tests__/*/*.mermaid; do bun x mmdc -i \"$f\" -o /tmp/test.svg -q || exit 1; done && echo 'All Mermaid files valid'"
  },
  "dependencies": {
    "jiti": "^2.4.2"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.4.0",
    "@types/bun": "^1.3.9",
    "drizzle-orm": "^0.45.1",
    "oxfmt": "^0.33.0",
    "oxlint": "^1.48.0",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "drizzle-orm": ">=0.45.1"
  }
}
